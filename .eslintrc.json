{
    "extends": [
        "airbnb-base"
    ],
    "env": {
        "node": true
    },
    "rules": {
        "max-len": ["error", { "code": 155 }],
        "no-console": "off",
        "strict": [
            "error",
            "global"
        ],
        "import/no-commonjs": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "no-underscore-dangle": [
            "error",
            {
                "allow": [
                    "_service",
                    "_validator",
                    "_albums",
                    "_songs",
                    "_songService",
                    "_pool",
                    "_authenticationsService",
                    "_usersService",
                    "_tokenManager",
                    "_collaborationService",
                    "_collaborationsService",
                    "_playlistsService",
                    "_playlistSongsService",
                    "_playlistService"
                ]
            }
        ],
        "camelcase": [
            "error",
            {
                "properties": "never",
                "ignoreDestructuring": true,
                "allow": ["album_id", "created_at", "updated_at"]
            }
        ],
        "no-shadow": "off"
    }
}